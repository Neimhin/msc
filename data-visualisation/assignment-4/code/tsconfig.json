{
  "compilerOptions": {
    "outDir": "./js/", // Redirect output structure to the directory
    "rootDir": "./ts/", // Specify the root directory of input files
    "sourceMap": true, // Enable source map support for debugging
    "target": "es6", // Set the JavaScript language version for emitted JavaScript and include compatible library declarations
    "module": "es6", // Specify module code generation
    "lib": ["dom", "es6"], // Specify a set of built-in API declaration groups to reference
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Emit additional JavaScript to ease support for importing CommonJS modules
    "moduleResolution": "node", // Choose how modules get resolved
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "removeComments": false // Do not remove comments - good for development
  },
  "include": [
    "ts/**/*" // Include all TypeScript files in ts folder and subfolders
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
